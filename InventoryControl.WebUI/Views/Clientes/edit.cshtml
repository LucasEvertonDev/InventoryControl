@model ClienteViewModel

@await Component.InvokeAsync("NavigationPathViewComponent")

<div class="card mb-12">
     <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="FormTitle col-12">Edição de Clientes</h5>
    </div>
     <div class="card-body">
        <form asp-action="edit" asp-controller="Clientes">
            <div class="row form-horizontal">
                @await Html.PartialAsync("_DadosCliente", model: Model)
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script type="text/javascript">
        $(document).ready(function (){
            $('input[Name="@nameof(Model.Cpf)"]').mask('000.000.000-00');
            $('input[Name="@nameof(Model.Cpf)"]').attr("maxlenght", "14")
            $('input[Name="@nameof(Model.Telefone)"]').mask('+55 (99) 99999-9999');

            if ('@Model.AutoComplete' == 'False') {
                $('input').attr('autocomplete', 'off');
            }

            if ('@Model.Enabled' == 'False') {
                $('select').attr('disabled', 'disabled');
                $('input').attr('disabled', 'disabled');
                $('#button-submit').attr('disabled', 'disabled');
            }
        });
    </script>
}

