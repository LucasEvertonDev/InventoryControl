@model ClienteViewModel

@await Component.InvokeAsync("NavigationPathViewComponent")

<div class="card mb-12">
     <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="FormTitle col-12">Cadastro de Clientes</h5>
    </div>
     <div class="card-body">
        <form asp-action="Create" asp-controller="Clientes">
            <div class="row form-horizontal">
                <div class="col-4 col-xs-12 mb-3">
                    <label asp-for="Cpf" class="control-label">CPF</label>
                    <input asp-for="Cpf" class="form-control" a />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>

                 <div class="col-8 col-xs-12 mb-3">
                    <label asp-for="Nome" class="control-label">NOME</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="col-3 col-xs-12 mb-3">
                    <label asp-for="DataNascimento" class="control-label">DATA NASCIMENTO</label>
                    <input asp-for="DataNascimento" type="date" class="form-control" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>

               <div class="col-4 col-xs-12 mb-3">
                    <label asp-for="Telefone" class="control-label">TELEFONE</label>
                    <input asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                @await Component.InvokeAsync("SaveButtonsViewComponent")
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script type="text/javascript">
        $(document).ready(function (){
            $('input[Name="@nameof(Model.Cpf)"]').mask('000.000.000-00');
            $('input[Name="@nameof(Model.Cpf)"]').attr("maxlenght", "14")
            $('input[Name="@nameof(Model.Telefone)"]').mask('+55 (32) 99999-9999');

            if ('!@Model.AutoComplete') {
                $('input').attr('autocomplete', 'off');
            }
        });
    </script>
}

