 @model WhatsAppViewModel

<div class="card mb-12">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="FormTitle col-12">WhatsApp</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <form asp-action="Send" asp-controller="WhatsApp">
                <div class="col-3 col-xs-12 mb-3">
                    <label asp-for="NumeroWhatsApp" class="control-label">NÚMERO</label>
                    <input asp-for="NumeroWhatsApp" class="form-control" />
                    <span asp-validation-for="NumeroWhatsApp" class="text-danger"></span>
                </div>

                <div class="col-6 col-xs-12 mb-3 SituacaoAtendimentoConcluida">
                    <label asp-for="MenssagemWhatsApp" class="control-label">MENSSAGEM</label>
                    <textarea asp-for="MenssagemWhatsApp" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="MenssagemWhatsApp" class="text-danger"></span>
                </div>

                <div class="col-auto">
                    <button type="submit" class="btn btn-primary mb-3">ENVIAR</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script type="text/javascript">
        $(document).ready(function () {
            $('input[Name="@nameof(Model.NumeroWhatsApp)"]').mask('+55 (99) 99999-9999');
        });
        if ('@Model.MenssagemWhatsApp' == 'False') {
            $('textarea').attr('disabled', 'disabled');
        }
    </script>
        }
