@model ProdutoViewModel

<div class="card mb-12">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="FormTitle col-12">Produtos</h5>
    </div>
    <div class="card-body">
        <form asp-action="index" asp-controller="Produto">
            <div class="row form-horizontal">
                <div class="col-4 col-xs-12 mb-3">
                    <label asp-for="Nome" class="control-label">Nome</label>
                    <input asp-for="Nome" class="form-control" />
                </div>
                <div class="col-8 col-xs-12mb-3">
                    <label asp-for="Categoria" class="control-label">Categoria</label>
                    <input asp-for="Categoria" class="form-control" />
                </div>
                <div class="col-12 mb-3" style="text-align: right" >
                    <button type="submit" class="btn btn-primary">
                        <span class="tf-icons bx bx-search"></span>&nbsp; Buscar
                    </button>
                    <a asp-action="create" class="btn btn-secondary">
                        <span class="tf-icons bx bx-plus"></span>&nbsp; Novo
                    </a>                      
                    <a asp-action="" asp-controller="" class="btn btn-secondary">
                        <span class="tf-icons bx bx-arrow-back"></span>&nbsp; Voltar
                    </a>
                </div>
            </div>
        </form>
        <div class="table-responsive">
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th>
                            NOME
                        </th>
                        <th>
                            DESCRIÇÃO
                        </th>
                        <th>
                            CATEGORIA
                        </th>
                        <th>
                            PREÇO
                        </th>
                        <th>
                            AÇÕES
                        </th>
                    </tr>
                </thead>
                <tbody>
                   @if (Model. != null && Model.Servicos.Any())
                    {
                        @foreach (var item in Model.Servicos) 
                        {
                            <tr>
                                <td colspan="3">
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td colspan="8">
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </td>
                                <td  colspan="1">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default">
                                        <span class="tf-icons bx bx-edit"></span>
                                    </a>     
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" style="text-align:center">
                                Nenhum resultado encontrado
                            </td>
                        </tr>
                    }
                       
                </tbody>
            </table>
        </div>
    </div>
</div>